{% extends 'base.html.twig' %}

{% block title %}Hello MesChampsController!
{% endblock %}

{% block content %}

	{% if form.valide is defined %}
		{% if form.valide == false %}
			<br></br>
		<div class="row content-panel">
			<div class="alert alert-danger h3 mb-3 font-weight-normal" role="alert">
				<h2 class="centered">{{ form.message }}</h2>
			</div>
		</div>
	{% else %}

		<div class="alert alert-success h3 mb-3 font-weight-normal" role="alert">
			{{ form.message }}
		</div>

	{% endif %}
{% endif %}

	<section id="main-content">
		<section class="wrapper">
			<div class="row mt">
				<div class="col-lg-12">
					<h4>
						<i class="fa fa-angle-right"></i>
						Ajouter une nouvelle parcelle</h4>
					<div class="form-panel">
						<div class=" form">
							<form class="cmxform form-horizontal style-form" method="post">
								<div class="form-group ">
									<label for="cname" class="control-label col-lg-2">Num√©ro d'ilot</label>
									<div class="col-lg-10">
										<input class=" form-control" id="ilot" name="ilot" type="number" required/>
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-lg-2">Nom de la parcelle</label>
									<div class="col-lg-10">
										<input class="form-control form-control-inline input-medium default-date-picker" type="text" name="libelle" required>
									</div>
								</div>
								<div class="form-group ">
									<label for="curl" class="control-label col-lg-2">Surface</label>
									<div class="col-lg-10">
										<input class="form-control " name="surface" id="surface" type="number" step='0.01' name="url"/>
									</div>
								</div>
								<hr>
								<div class="form-group ">
									<div class="form-send">
										<div class="col-sm-3">
											<button class="btn btn-compose" type="submit" name="btAjouter">Valider</button>
										</div>
									</div>
								</div>

							</form>
						</div>
					</div>
					<!-- /form-panel -->
				</div>
				<!-- /col-lg-12 -->
			</div>
		</section>
	</section>
{% endblock %}
